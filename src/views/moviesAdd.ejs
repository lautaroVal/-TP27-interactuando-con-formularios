<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Movie add</title>
    <link rel='stylesheet' href='/css/style.css' />
</head>

<body>
    <figure>
        <img src="/img/logo-DH.png" alt="Logo Digital House">
      </figure>
    <h1 class="moviesAddTitulo" class="moviesAddTitulo"></h1>
    <br>
    <section id="formulario"  >
        <article class="mostrarFormulario" id="mostrarFormulario">
            <form class="form" action="/movies/create" method="POST" id="form-add">
                <label for="title">Titulo </label>
                <p id="titleMsg"></p>
                <div><input type="text" name="title" id="title" autofocus></div>
                <label for="rating">Calificación </label>
                <p id="ratingMsg"></p>
                <div><input type="number" name="rating" id="rating" placeholder="Indicar valor entre 0 y 10"> </div>
                <label for="awards">Premios </label>
                <p id="awardsMsg"></p>
                <div><input type="number" name="awards" id="awards" placeholder="Indicar valor entre 0 y 10"></div>
                <label for="release_date">Fecha de creación </label>
                <p id="release_dateMsg"></p>
                <div><input type="date" name="release_date" id="release_date" ></div>
                <label for="length">Duración </label>
                <p id="lengthMsg"></p>
                <div><input type="number" name="length" id="length" placeholder="Indicar duración entre 60 y 360 minutos" ></div>
                <label for="genre_id">Género </label>
                <p id="genre_idMsg"></p>
                <div>
                    <select name="genre_id" id="genre_id" >
                        <option value="" disabled selected>- Seleccione el género - </option>
                        <% allGenres.forEach(genre => { %>
                        <option value="<%= genre.id %>"><%= genre.name %></option>
                        <% }); %>
                    </select>
                </div>
                <br>
                <div> <button class="botonAgregar" type="submit">Agregar</button>
                
                <a  class="botonVolver" href="/movies">Listado de Películas</a></div>
            </form>
        </article>
    </section>
    <%- include('partials/script') -%>
    <script src="/js/moviesAdd.js"></script>
</body>
</html>